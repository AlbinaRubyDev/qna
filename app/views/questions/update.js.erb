$('.error-title, .error-body').html('');

<% if @question.errors.any? %>
  $('.error-title').html("<%= j @question.errors.full_messages_for(:title).join(', ') %>");
  $('.error-body').html("<%= j @question.errors.full_messages_for(:body).join(', ') %>");
<% else %>
  $('.question').html("<%= j render @question %>");
<% end %>
